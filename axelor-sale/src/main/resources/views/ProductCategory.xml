<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://apps.axelor.com/xml/ns/object-views" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://apps.axelor.com/xml/ns/object-views http://apps.axelor.com/xml/ns/object-views/object-views_0.9.xsd">
  <grid name="product-category-grid" title="Product Categories">
    <field name="name"/>
    <field name="code"/>
    <field name="parent"/>
  </grid>
  <form name="product-category-form" title="Product Category" cols="4">
    <field name="code"/>
    <field name="name"/>
    <field name="parent" domain="self.code != :code"/>
  </form>
</object-views>
